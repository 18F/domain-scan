#!/usr/bin/env python

import sys, os
import utils
import csv

utils.mkdir_p("cache")

def domains_from(arg):
  if arg.endswith(".csv"):
    with open(arg, newline='') as csvfile:
      for row in csv.reader(csvfile):
        yield row[0]
  else:
    yield arg

def run(options=None):
  if not options["_"]:
    print("Provide a CSV file, or domain name.")
    exit()

  for domain in domains_from(options["_"][0]):
    print(domain)


run(utils.options())
